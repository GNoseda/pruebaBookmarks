<p id="notice"><%= notice %></p>
<% if @category.is_public %>
  
  <h4><%= @category.title %></h4> 
<div class="row border border-info border-2 rounded">   
  <table class="table">
    <tr>
      <th>Parent Category</th>
      <th>Public Status</th>
      <th>Sub Categories</th>
      <th>Bookmarks</th>
    
    </tr>

    <tr>
      <td><%= @category.parent %></td>
      <td><%= @category.public_status %></td>
      <td><%= @category.subcategories %></td>
      <td><%= @category.bookmark_count %></td>
    </tr>  
  </table>
  
</div>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Url</th>
        <th>Category</th>
        <th>Kind</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <%= render 'bookmarks/index' %>
    </tbody>
  </table>

  <%= link_to 'API', api_path(@category) %> 
  <%= link_to 'Edit', edit_category_path(@category) %> 
<% else %>
  <h4>This is a private category</h5>
  <p>that anybody can turn public... because its colaborative</p>
<% end %>
<%= link_to 'Back', categories_path %>
