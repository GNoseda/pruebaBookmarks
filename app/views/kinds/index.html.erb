<p id="notice"><%= notice %></p>

<h1>Types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Bookmarks</th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td><%= kind.title %></td>
        <td><%= kind.bookmarks_count %></td>
        <td><%= link_to 'Show', kind %></td>
        <td><%= link_to 'Edit', edit_kind_path(kind) %></td>
        <td><%= link_to 'Destroy', kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

